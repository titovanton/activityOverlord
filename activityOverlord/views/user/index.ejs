<div class="container">
  <h3>User</h3>

  <table class="table">
    <tr>
      <th>ID</th>
      <th>NAME</th>
      <th>TITLE</th>
      <th>EMAIL</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% _.each(users, function(user) { %>
      <tr data-id="<%= user.id %>" data-model="user">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.title %></td>
        <td><%= user.email %></td>

        <td>
          <% if (user.admin) { %>
            <i style="font-size:30px; color:green;" class="glyphicon glyphicon-king"></i>
          <% } else { %>
            <i style="font-size:30px;" class="glyphicon glyphicon-pawn"></i>
          <% } %>
        </td>

        <td>
          <a href="/user/show/<%= user.id %>" class="btn btn-sm btn-primary">
            Show
          </a>
        </td>

        <td>
          <a href="/user/edit/<%= user.id %>" class="btn btn-sm btn-warning">
            Edit
          </a>
        </td>

        <td>
          <form action="/user/destroy/<%= user.id %>" method="POST">
            <input type="hidden" name="_csrf" value="<%= _csrf %>">
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
          </form>
        </td>
      </tr>
    <%}) %>
  </table>
</div>
