<article class="container">

  <form id="user-edit" action="/user/update/<%= user.id %>" method="POST" class="form-horizontal">
    <h2>Hey, you're editing a user...</h2>
    <hr>

    <% if (flash && flash.err) { %>
      <ul class="alert alert-success">
        <% Object.keys(flash.err).forEach(function(key) { %>
          <li><%- key + ': ' + JSON.stringify(flash.err[key]) %></li>
          <% }); %>
      </ul>
    <% }; %>

    <div class="form-group">
      <label class="col-sm-2 control-label">Your name</label>
      <div class="col-sm-5">
          <input type="text" class="form-control" placeholder="Your name" name="name" value="<%= user.name %>">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Your title</label>
      <div class="col-sm-5">
          <input type="text" class="form-control" placeholder="Your title" name="title" value="<%= user.title %>">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Email address</label>
      <div class="col-sm-5">
          <input type="text" class="form-control" placeholder="Email address" name="email" value="<%= user.email %>">
      </div>
    </div>

    <% if (session.user.admin) { %>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-5">
          <div class="checkbox">
            <label>
              <input type="checkbox" name="admin"
                <% if (user.admin) { %>checked="checked"<% } else { %><% } %>> Admin
            </label>
          </div>
        </div>
      </div>
    <% } %>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
          <button type="submit" class="btn btn-default">Proceed</button>
      </div>
    </div>

    <input type="hidden" name="_csrf" value="<%= _csrf %>">
  </form>

</article>
